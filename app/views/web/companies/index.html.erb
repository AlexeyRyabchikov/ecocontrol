<div class="container" style="max-width: 1200px">
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Навание</th>
        <th scope="col">Вид едятельности</th>
        <th scope="col">Адрес</th>
        <th scope="col">Телефон</th>
        <th scope="col">Регистрация НВОС</th>
        <th scope="col">Потенциально опасное</th>
      </tr>
    </thead>
    <tbody>
      <% @companies.each do |company| %>
      <% if !company.nvos_checked && company.okveds.first.dangerous && company.clame_counter > 0 %>
          <tr class="table-danger">
      <% elsif !company.nvos_checked && (company.okveds.first.dangerous || company.clame_counter > 0) %>
           <tr class="table-warning">
      <% else %>
           <tr>
      <% end %>
          <td><%= company.name %></td>
          <td><%= company.activity_type %></td>
          <td><%= company.address %></td>
          <td><%= company.phone %></td>
          <td><%= company.nvos_checked ? 'Да' : 'Нет' %></td>
          <td><%= company.phone %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
