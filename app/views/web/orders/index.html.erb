<div class="container text-center">
  <h3>Список заявок на обход предприятий </h3>
</div>

<table class="table mt-4">
  <thead>
    <tr>
      <th scope="col">Дата</th>
      <th scope="col">Комментарий</th>
      <th scope="col">Количество организаций</th>
      <th scope="col">Переход к заявке</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.date %></td>
        <td><%= order.comment %></td>
        <td><%= order.companies_count %></td>
        <td>
          <%= link_to order do %>
            <button type="button" class="btn btn-success btn-sm">Перейти к заявке</button>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>